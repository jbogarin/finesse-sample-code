    <Require feature="pubsub-2" />
	<Require feature="setprefs" />
</ModulePrefs>

<Content type="html">
<![CDATA[
	<!-- Styling -->
    <link rel="stylesheet" href="WebService.css" type="text/css" />

    <!-- jQuery 1.5 -->
    <script type="text/javascript" src="jquery-1.9.1.min.js"></script>
    
